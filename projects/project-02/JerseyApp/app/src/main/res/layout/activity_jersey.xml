<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jersey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gg.patrickcummins.myapplication.JerseyActivity">

    <ImageView
        android:id="@+id/jerseyImageView"
        android:layout_width="@dimen/jersey_picture"
        android:layout_height="@dimen/jersey_picture"
        android:layout_margin="@dimen/margin_5dp"
        android:src="@drawable/klay_thompson_white" />

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@id/jerseyImageView"
        android:text="Player Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/player_name_text_size" />

    <TextView
        android:id="@+id/playerNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerNameTextView"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@id/jerseyImageView"
        android:text="#00"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/player_name_text_size" />

    <TextView
        android:id="@+id/chooseAColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerNumberTextView"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@+id/jerseyImageView"
        android:text="Choose A Color"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/jersey1"
        android:layout_width="@dimen/jersey_select"
        android:layout_height="@dimen/jersey_select"
        android:layout_below="@id/chooseAColorTextView"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@id/jerseyImageView"
        android:background="@android:color/holo_blue_dark"

        />

    <TextView
        android:id="@+id/jersey2"
        android:layout_width="@dimen/jersey_select"
        android:layout_height="@dimen/jersey_select"
        android:layout_below="@id/chooseAColorTextView"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@id/jersey1"
        android:background="@drawable/black_border"

        />

    <TextView
        android:id="@+id/jersey3"
        android:layout_width="@dimen/jersey_select"
        android:layout_height="@dimen/jersey_select"
        android:layout_below="@id/chooseAColorTextView"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@id/jersey2"
        android:background="@android:color/black"

        />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jersey3"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toRightOf="@+id/jerseyImageView"
        android:text="Price: $00"
        android:textColor="@color/colorAccent" />


    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/sharkAccent"
        android:text="@string/add_to_cart" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cartFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_5dp"
        android:src="@drawable/ic_shopping_cart_black_24dp" />

</RelativeLayout>
